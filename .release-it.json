{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:init": ["git pull", "npm run lint", "npm run test"],
    "after:bump": "npm run build"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "Documentation Updates"
          },
          {
            "type": "chore",
            "section": "Additional Changes"
          }
        ]
      },
      "gitRawCommitsOpts": {
        "format": "%B%n-hash-%n%H%n-gitTags-%n%d%n-committerDate-%n%ci%n-authorName-%n%an%n-authorEmail-%n%ae%n-authorDate-%n%ai%n-committerName-%n%cn%n-committerEmail-%n%ce"
      },
      "commitPartial": "* {{#if scope}}**{{scope}}:**{{/if}}{{subject}}{{#if hash}}([{{hash}}]({{repository}}/commit/{{hash}})){{/if}}{{#ifreferences~}}{{~#each references}}, closes [{{#if owner}}{{owner}}/{{repository}}{{else}}{{../repository}}{{/if}}#{{issue}}]({{../host}}/{{#ifowner}}{{owner}}/{{repository}}{{else}}{{../owner}}/{{../repository}}{{/if}}/issues/{{issue}}){{/each}}{{/if}}{{#if authorName}} - by@{{authorName}}{{/if}}"
    }
  }
}
